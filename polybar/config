; ===============
; POLYBAR DOTFILE
; MADE BY CHECHU!
; ===============

; COLOR PALLETTE
[colors]
    background 						= #222D32
    foreground 						= #E1E7EA
    foreground-alt 					= #9CA4A8
    accent          				= #008799
    alert 							= #BD2C40

; LINUX-PC BAR PROPERTIES
[bar/pc]
    monitor                         = DP-3
    monitor-fallback                = HDMI-1

    width                           = 100%
    height                          = 29
    padding-right                   = 2

    background                      = ${colors.background}
    foreground                      = ${colors.foreground}

    font-0                          = Roboto Mono: pixelsize=11: weight=medium; 3

    modules-left                    = i3 window
    modules-center                  = time
    modules-right                   = song volume temp_amd memory

    fixed-center                    = true
    module-margin-left              = 3

    tray-position 					= right
	tray-padding 					= 0

; LINUX-XPS BAR PROPERTIES
[bar/xps]
    monitor 						= eDP1

    width               			= 100%
    height              			= 29
    padding-right       			= 2

    background          			= ${colors.background}
    foreground          			= ${colors.foreground}

    font-0              			= Roboto Mono: pixelsize=11: weight=medium; 3

    modules-left        			= i3 window
    modules-center      			= time
    modules-right       			= volume brightness battery memory

    fixed-center        			= true
    module-margin-left  			= 3

	tray-position 					= right
	tray-padding 					= 0

; i3 WORKSPACES
[module/i3]
    type 							= internal/i3

    format 							= <label-mode><label-state>
    wrapping-scroll 				= false
    index-sort 						= true

    label-mode-background 			= ${colors.accent}
    label-mode-padding 				= 1

    label-focused-foreground 		= ${colors.foreground}
    label-focused-padding 			= 1

    label-visible-foreground 		= ${colors.foreground-alt}
    label-visible-padding 			= 1

    label-unfocused-foreground 		= ${colors.foreground-alt}
    label-unfocused-padding 		= 1

    label-urgent-foreground 		= ${colors.alert}
    label-urgent-padding 			= 1

; ACTIVE WINDOW INFO
[module/window]
    type 							= internal/xwindow

    label 							= %title%
    label-maxlen 					= 50

; DATE & TIME
[module/time]
    type 							= internal/date

    label 							= %date%, %time%
    label-foreground 				= ${colors.foreground}
    date 							= "%A %B %d"
    time 							= %H:%M

; MUSIC INFO
[module/song]
    type                            = custom/script
    exec                            = ~/.dotfiles/polybar/song.sh
    interval                        = 0
    tail                            = true

    click-left                      = playerctl play-pause
    scroll-up                       = playerctl previous
    scroll-down                     = playerctl next

; VOLUME CONTROL
[module/volume]
    type                            = internal/pulseaudio
    interval                        = 1

    format-volume 					= <ramp-volume> <label-volume>
    label-volume-foreground 		= ${colors.foreground-alt}

    label-muted 					= MUTED
    label-muted-foreground 			= ${colors.foreground-alt}
    ramp-volume-0                   = VOLUME

; CPU TEMP FOR LINUX-PC
[module/temp_amd]
    type                            = internal/temperature
    hwmon-path                      = /sys/class/hwmon/hwmon0/temp1_input
    interval                        = 5
    format-prefix                   = "TEMP "

    label                           = %temperature-c%
    label-foreground                = ${colors.foreground-alt}
    label-warn-foreground           = ${colors.alert}

; RAM USSAGE
[module/memory]
    type 							= internal/memory
    interval                        = 5
    format-prefix 					= "RAM "

    label 							= %gb_used%
    label-foreground 				= ${colors.foreground-alt}

; BATTERY INFORMATION
[module/battery]
	type 							= internal/battery
	battery 						= BAT0
    interval                        = 60
	adapter 						= AC
	full-at 						= 99

	format-charging 				= POWER <label-charging>
	format-discharging 				= POWER <label-discharging>
    format-full 	                = POWER <label-full>

	label-charging-foreground 		= ${colors.foreground}
	label-discharging-foreground 	= ${colors.foreground-alt}
    label-full-foreground 	        = ${colors.foreground}

; BRIGHTNESS LEVEL
[module/brightness]
    type                            = internal/xbacklight
    enable-scroll                   = true

    format                          = <ramp> <label>

    ramp-0                          = BRIGHT

    label-foreground 				= ${colors.foreground-alt}

; WIRELESS CONNECTION
[module/wireless]
	type 							= internal/network
	interface 						= wlp58s0
    interval                        = 5

	label-connected 				= %essid%
	label-connected-foreground 		= ${colors.foreground}

	label-disconnected 				= NO WIFI
	label-disconnected-foreground 	= ${colors.foreground-alt}

; LAN CONNECTION
[module/lan]
    type                            = internal/network
    interface                       = enp33s0
    interval                        = 5

    format-connected                = <ramp-signal> <label-connected>
    label-connected                 = %downspeed%
    label-connected-foreground      = ${colors.foreground-alt}
    ramp-signal-0                   = NET

    label-disconnected              = NO NET
    label-disconnected-foreground   = ${colors.foreground-alt}

    format-packetloss               = <label-packetloss>
    label-packetloss                = NO DATA
    label-packetloss-foreground     = ${colors.foreground-alt}
